@page "/myassistant"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using frontend.Data
@using frontend.Entities
@using frontend.Services
@inject MyAssistantService Llm
@inject ApplicationDbContext Db
@inject AuthenticationStateProvider Auth
@inject UserManager<ApplicationUser> UserManager
@rendermode InteractiveServer

<div class="container-fluid">
    <div>
        <div class="display-3">@authState.User.Identity.Name's Assistant</div>
        <p>Ask questions about your orders and get instant responses.</p>
    </div>
    <hr />
    <div class="d-flex">
        <div class="" style="width:250px; max-width:300px;">
            <h3>My Sesssions</h3>
            <button class="btn btn-sm btn-primary mb-2" @onclick="async () => { await GetOrCreateSession(); await ScrollToBottom(); }">
                <i class="bi bi-plus"></i> New Session
            </button>
            <div class="list-group">
                @foreach(var session in mySessions)
                {
                    <div class="list-group-item list-group-item-action @(session.Id == SessionId ? "active" : "")" @onclick="() => LoadSession(session.Id)">
                        @session.Title
                    </div>
                }
            </div>
        </div>
        <div class="d-flex flex-column flex-fill border-start border-3 border-secondary">
            <!-- Header -->
            <div class="p-2 border-bottom bg-light d-flex align-items-center">
                <i class="bi bi-chat-dots me-2"></i>
                <h5 class="mb-0">Chat Session: </h5>
                @if (currentSession != null)
                {
                    @if (isEditingTitle){
                        <div class="d-flex d-inline">
                            <input class="form-control form-control-sm ms-2"
                                   @bind="currentSession.Title"
                                   @bind:event="oninput"
                                   @onblur="() => { isEditingTitle = false; Db.AISession.Update(currentSession); Db.SaveChanges(); }"
                                   style="max-width:200px;" />
                            <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="() => { isEditingTitle = false; Db.AISession.Update(currentSession); Db.SaveChanges(); }">
                                <i class="bi bi-check-lg"></i> Save
                            </button>
                        </div>
                    } else
                    {
                        <h5 class="d-inline">@currentSession.Title</h5>
                        <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="() => EditSessionTitle()">
                            <i class="bi bi-pencil"></i> Edit
                        </button>                        
                    }
                }
            </div>

            <!-- Chat history -->
            <div class="chat flex-fill overflow-auto p-3" style="height:50vh;" @ref="chatContainer">
                @if (currentSession != null && currentSession.ChatHistories.Any())
                {
                    @foreach (var m in currentSession.ChatHistories.ToList())
                    {
                        <div class="mb-3 d-flex @(m.Role == "user" ? "justify-content-end" : "justify-content-start")">
                            <div class="chat-bubble @(m.Role == "user" ? "user-bubble" : "assistant-bubble") d-flex align-items-center">
                                @if (m.Role == "user")
                                {
                                    <i class="bi bi-person-circle me-2"></i>
                                }
                                else
                                {
                                    <i class="bi bi-robot me-2"></i>
                                }
                                <span style="max-width: 40vw; overflow-x:auto;">@m.Content</span>
                                @if(m.Role == "assistant")
                                {
                                    <button class="btn btn-sm btn-outline-primary ms-2" @onclick="async () => {await StartSpeakingResponse(m.Content);}" title="Speak response">
                                        <i class="bi bi-volume-up"></i> speak
                                    </button>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted"><em>Select a session to start chatting.</em></div>
                }
                @if (isAIGenerating)
                {
                    <div class="mb-3 d-flex justify-content-start)">
                        <div class="chat-bubble assistant-bubble d-flex align-items-center">
                            <i class="bi bi-robot me-2"></i>
                            <span style="max-width: 40vw; overflow-x:auto;">...<i>generating</i>...</span>
                        </div>
                    </div>                    
                }
            </div>

            <!-- Input bar -->
            <div class="p-2 border-top bg-light">

                <div class="d-flex">
                    <VoiceChatInput OnMessage="HandleUserVoiceMessage" @ref="_voiceInput" />                    
                </div>
                <div class="d-flex">
                    <input class="form-control me-2"
                           @bind="newMessage"
                           @bind:event="oninput"
                           @onkeydown="HandleKeyDown"
                           placeholder="Ask about your order..." />

                    <button class="btn btn-primary"
                            @onclick="Send"
                            disabled="@string.IsNullOrEmpty(newMessage)">
                        <i class="bi bi-send"></i> Send
                    </button>
                </div>

                <!-- Message options -->
                <div class="mt-2 d-flex justify-content-between text-muted">
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-paperclip"></i> Attach
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-emoji-smile"></i> Emoji
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<AISession> mySessions = new();
    private string newMessage = "";
    private string lastReply = "";
    private int SessionId = 0;
    private AISession? currentSession;
    private AuthenticationState authState;
    private ElementReference chatContainer;
    [Inject] IJSRuntime JS { get; set; }
    private bool isEditingTitle = false;
    private bool isAIGenerating = false;

    private VoiceChatInput? _voiceInput;

    private async Task HandleUserVoiceMessage(string message)
    {
        // Your existing send logic
        newMessage = message;
        lastReply = "";
        await Send();

        // Bot speaks back!
        await _voiceInput.SpeakAsync(lastReply);
    }
    private async Task StartSpeakingResponse(string response)
    {
        if (_voiceInput != null)
        {
            await _voiceInput.SpeakAsync(response);
        }
    }
    private async Task StopSpeaking()
    {
        if (_voiceInput != null)
        {
            await _voiceInput.CancelSpeechAsync();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (chatContainer.Context != null)
        {
            await JS.InvokeVoidAsync("scrollToBottom", chatContainer);
        }
    }
    private async Task ScrollToBottom()
    {
        await JS.InvokeVoidAsync("scrollToBottom", chatContainer);
    }

    protected override async Task OnInitializedAsync()
    {
        authState = await Auth.GetAuthenticationStateAsync();
        var userId = UserManager.GetUserId(authState.User);

        mySessions = await Db.AISession
            .Where(s => s.UserId == userId)
            .OrderByDescending(a=> a.Id)
            .ToListAsync();
    }
    private async Task LoadSession(int sessionId)
    {
        SessionId = sessionId;
        currentSession = await Db.AISession.Include(a=>a.ChatHistories)
            .FirstOrDefaultAsync(m => m.Id == sessionId);
        StateHasChanged();
        await ScrollToBottom();
    }

    private async Task Send()
    {
        var msg = newMessage.Trim();
        newMessage = "";
        lastReply = "";
        if (SessionId > 0 && currentSession != null)
        {
            isAIGenerating = true;

            var reply = await Llm.ChatWithToolsAsync(currentSession.ChatHistories.ToList(), msg, SessionId, Db);
            lastReply = reply;
            currentSession.ChatHistories.Add(new AIChatHistory { Role = "user", Content = msg });
            currentSession.ChatHistories.Add(new AIChatHistory { Role = "assistant", Content = reply });
            isAIGenerating = false;
        } else
        {
            // create new session
            SessionId = await GetOrCreateSession();
            if (SessionId == 0)
            {
                // show some error msg
                currentSession.ChatHistories.Add(new AIChatHistory { Role = "assistant", Content = "Error creating session. Please try again." });
                StateHasChanged();
                return;
            }

            isAIGenerating = true;

            var reply = await Llm.ChatWithToolsAsync(new List<AIChatHistory>(), msg, SessionId, Db);
            lastReply = reply;
            if (currentSession.ChatHistories == null)
            {
                currentSession.ChatHistories = new List<AIChatHistory>();
            }
            currentSession.ChatHistories.Add(new AIChatHistory { Role = "user", Content = msg });
            currentSession.ChatHistories.Add(new AIChatHistory { Role = "assistant", Content = reply });
            isAIGenerating = false;
        }
        StateHasChanged();
        await ScrollToBottom();
    }

    private async Task<int> GetOrCreateSession()
    {
        var userId = UserManager.GetUserId(authState.User);

        currentSession = new AISession { UserId = userId, Title = DateTime.Today.ToString("dd-MMM-yy:ddd") };
        Db.AISession.Add(currentSession);
        await Db.SaveChangesAsync();
        currentSession.ChatHistories = new List<AIChatHistory>();
        SessionId = currentSession.Id;

        mySessions = await Db.AISession
            .Where(s => s.UserId == userId)
            .OrderByDescending(a => a.Id)
            .ToListAsync();
        return currentSession.Id;
    }

    private void EditSessionTitle()
    {
        isEditingTitle = true;

    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await Send();
        }
    }
}